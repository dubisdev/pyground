{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Pyground",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "identifier": "dev.dubis.pyground",
      "publisher": "dubis.dev",
      "copyright": "2023 ©️ David Jimenez",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": [
        "nsis"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Pyground",
        "width": 1000,
        "height": 750
      }
    ]
  }
}
